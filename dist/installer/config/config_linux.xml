<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Cytrus</Name>
    <Version>1.0.0</Version>
    <Title>Cytrus Updater</Title>
    <Publisher>Cytrus Team</Publisher>
    <!-- e.g. /home/<user>/.cytrus or /opt/cytrus if run as root -->
    <TargetDir>@HomeDir@/.cytrus</TargetDir>
    <AdminTargetDir>/opt/cytrus</AdminTargetDir>
    <InstallerApplicationIcon>icon</InstallerApplicationIcon>
    <InstallerWindowIcon>icon.png</InstallerWindowIcon>
    <RemoteRepositories>
        <Repository>
            <Url>https://repo.cytrus-emu.org</Url>
            <Enabled>1</Enabled>
            <DisplayName>Official Cytrus Repository</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>
