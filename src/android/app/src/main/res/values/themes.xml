<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Cytrus.Splash.Main" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/cytrus_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_cytrus</item>
        <item name="postSplashScreenTheme">@style/Theme.Cytrus.Main</item>
    </style>

    <style name="Theme.Cytrus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/cytrus_primary</item>
        <item name="colorOnPrimary">@color/cytrus_onPrimary</item>
        <item name="colorPrimaryContainer">@color/cytrus_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/cytrus_onPrimaryContainer</item>
        <item name="colorSecondary">@color/cytrus_secondary</item>
        <item name="colorOnSecondary">@color/cytrus_onSecondary</item>
        <item name="colorSecondaryContainer">@color/cytrus_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/cytrus_onSecondaryContainer</item>
        <item name="colorTertiary">@color/cytrus_tertiary</item>
        <item name="colorOnTertiary">@color/cytrus_onTertiary</item>
        <item name="colorTertiaryContainer">@color/cytrus_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/cytrus_onTertiaryContainer</item>
        <item name="colorError">@color/cytrus_error</item>
        <item name="colorErrorContainer">@color/cytrus_errorContainer</item>
        <item name="colorOnError">@color/cytrus_onError</item>
        <item name="colorOnErrorContainer">@color/cytrus_onErrorContainer</item>
        <item name="android:colorBackground">@color/cytrus_background</item>
        <item name="colorOnBackground">@color/cytrus_onBackground</item>
        <item name="colorSurface">@color/cytrus_surface</item>
        <item name="colorOnSurface">@color/cytrus_onSurface</item>
        <item name="colorSurfaceVariant">@color/cytrus_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/cytrus_onSurfaceVariant</item>
        <item name="colorOutline">@color/cytrus_outline</item>
        <item name="colorOnSurfaceInverse">@color/cytrus_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/cytrus_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/cytrus_inversePrimary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="sliderStyle">@style/CytrusSlider</item>

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Trick for API >= 29 specific changes -->
    <style name="Theme.Cytrus.Main" parent="Theme.Cytrus" />

</resources>
